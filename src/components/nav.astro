---
const { class: className, ...rest } = Astro.props;

const locations = [
  {url: '/', name: 'Home', hide: true},
  // {url: '/blog', name: 'Blog'},
  // {url: '/notes', name: 'Notes'},
  // {url: '/projects', name: 'Projects'},
  // {url: '/photos', name: 'Photos'},
]
---
<style>
  .header a,
  .header a:active,
  .header a:hover {
    padding: 1em 0.5em;
  }

  a,
  a:active,
  a:hover {
    padding: 0.5em 0.5em;
  }
</style>
<ul id="nav" class:list={['child-component', className]} {...rest}>
  {locations.map(location => {
    if (Astro.url.pathname === location.url && location.hide) {
      return;
    } else if (Astro.url.pathname === location.url) {
      return <li>{location.name}</li>
    } else {
      return <li><a href={location.url}>{location.name}</a></li>
    }
  })}
</ul>
